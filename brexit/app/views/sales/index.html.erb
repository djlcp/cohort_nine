<p id="notice"><%= notice %></p>

<h1>Sales</h1>

<table>
  <thead>
    <tr>
      <th>Sold Date</th>
      <th>Quantity</th>
      <th>Product Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.name %></td>

        <td><%= sale.SoldDate %></td>
        <td><%= sale.quantity %></td>
        <td><%= @products.name %></td>
        <td><%= link_to 'Show', sale %></td>
        <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
        <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <tr>
        <td><%= sale.saleprice %></td>
      </tr>

  <tr>
   <td><%= sale.profit %></td>
  </tr>

  <% end %>

  </tbody>
</table>

