<div class="section">
<%= simple_form_for [:customer, @user] do |f| %>
<div class="container">
<div class="card-deck mb-3 text-center">
  <div class="card mb-4 shadow-sm">
    <div class="card-header">
      <h4 class="my-0 font-weight-normal"> My Details</h4>
      <p> Edit your details here </p>
    </div>
    <div class="card-body">
     <div class="field">
      <div class="control">
          <%= f.label :name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
          <%= f.text_field :first_name %>        
     </div>
    </div><br>

     <div>
      <%= f.button :submit, 'Save user',class: "btn btn-primary" %>
      <%= link_to "Back to my page", customer_users_path(current_user), class: "btn btn-primary" %>
      <% end %>
    </div>