
<section class="text-center">
    
  <div class="p-4"><h2>Welcome Please Log In</h2></div>
  <div class="container-fluid w-25 p-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <div class="form-group">
        <%= f.label :email, 'username(e-mail)' %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control',autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: 'form-control',autocomplete: "current-password" %>
      </div>
      

      <div class="actions p-3">
        <%= f.submit "Log in" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

     

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
