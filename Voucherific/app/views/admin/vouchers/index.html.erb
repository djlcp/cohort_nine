<h1> This is a list of all the vouchers issued </h1>

<div class = "section">
    <div class="mx-auto" style="width: 300px;">
    <%= simple_form_for :search_voucher, url: admin_vouchers_path, method: "GET", html: { class: 'form-inline' } do |f| %>
       <p> <%= f.text_field :number, label: false, required: true, input_html: {value: ""} %>
        <%= f.submit "Search", class: "btn btn-success" %> 
        <%= link_to "Reset", admin_vouchers_path ,class: "btn btn-success" %> </p>
    <% end %>
    </div>


    <table class="table table-hover">
        <thead>
            <tr>
            <th scope="col">Voucher number</th>
            <th scope="col">Template Id</th>
            <th scope="col">Customer E-mail</th>
            <th scope="col">Voucher Status</th>
            <th scope="col">Date of Status</th>
            <th scope="col">Value</th>
            <th scope="col">Redeemed by</th>
            </tr>
        </thead>
        <tbody>
            <% @vouchers.each do |voucher| %>
                <tr>
                <td><%= voucher.number %></th>
                <td><%= voucher.template.id %></td>
                <td><%= voucher.customer.email %></td>
                <td><%= voucher.status %></td>
                <td><%= voucher.updated_at %></td>
                <td>Â£ <%= voucher.template.value %></td>
                <%if voucher.vendor %>
                    <td><%= voucher.vendor.email %></td>
                <%end%>
                </tr>
            <% end %>
        </tbody>
    </table>

    <p>
        <%= link_to "Back To Homepage", root_path ,class: "btn btn-success" %>
    </p> 
</div>


