
<h2> Available vouchers: </h2>
<p> Click on a voucher to edit it</p>

<% @vouchers.each do |voucher| %>
    
        <hr class="mt-4 mb-4">
        <div class="admin_voucher_card">
            <p> Voucher id:  <%= voucher.id %> </p>
            <p> Value: Â£ <%= voucher.value %> </p>
