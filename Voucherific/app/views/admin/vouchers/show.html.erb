

<h2> Voucher details </h2>

<div class="content">
<p>  Id : <%= @voucher.id %> </p>
<p>  Value : <%= @voucher.value %> </p>
<p>  Description : <%= @voucher.description %> </p>
</div>

<% if @instance == nil %>
  <p>
    <%= link_to "Edit", edit_admin_voucher_path(@voucher), class: "btn btn-primary" %> 
  </p>
<% end %>


<% if @voucher.is_inactive != true %>
  <p>
    <%= link_to "Deactivate", {controller: 'vouchers', action: 'disable', id: @voucher.id}, data: { confirm: "Are you sure?" }, class: "btn btn-primary" %>
  </p> 
<% else %>
  <p>
    <%= link_to "Restore", {controller: 'vouchers', action: 'restore', id: @voucher.id}, data: { confirm: "Are you sure?" }, class: "btn btn-primary" %>
  </p>
<% end %>


<% if @instance == nil %>
  <p>
    <%= link_to "Delete", admin_voucher_path(@voucher), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary" %>
  </p>
<% end %>

<p>
  <%= link_to "Back to vouchers list", admin_vouchers_path, class: "btn btn-primary" %>
</p>

