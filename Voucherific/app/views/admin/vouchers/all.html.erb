
<h2> All vouchers </h2>

<hr class="mt-4 mb-4">

<% @vouchers.each do |voucher| %>

    <p> Voucher number: <%= voucher.number %> </p>
    <p> Voucher value:  <%= voucher.template.value %> </p>
    <p> Voucher description:  <%= voucher.template.description %> </p>
    <hr class="mt-4 mb-4">
<% end %>

<%= link_to "Back To Admin Homepage", admin_vouchers_path ,class: "btn btn-primary" %>

<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Voucher</th>
      <th scope="col">Voucher Status</th>
      <th scope="col">Date of Status</th>
      <th scope="col">Value</th>
      <th scope="col">Optician</th>
      <th scope="col">Customer E-mail</th>
      <th scope="col">Payment Status</th>
      </tr>
  </thead>
  <tbody>

  <% @vouchers.each do |voucher| %>
    <tr>
      <th scope="row">1</th>
      <td><%= voucher.number %></td>
      <td><%= voucher.template.description %></td>
      <td><%= voucher.number %></td>
      
    </tr>
    <% end %>
   
   
  </tbody>
</table>