<h2 class="p-3"> Partner shops: </h2>

<% @shops.each do |shop| %>
    
    <div class="container">
    <div class="card-deck mb-3 text-center">
      <div class="card mb-4 shadow-sm">
        <div class="card-header">
          <h4 class="my-0 font-weight-normal"> Shop id:  <%= shop.id %> </h4>
          
        <%= link_to content_tag(:span, ""), {controller: 'shops', action: 'show', id: shop.id}  %>
        </div>
        <div class="card-body">
        <h5> Shop name: <%= shop.name %> </h5>
        <p> Location: <%= shop.location %> </p>
        <p> Phone number: <%= shop.contact_phone %> </p>
        <p> Email address: <%= shop.contact_email %> </p>
      

      </div>
      <div class="d-flex justify-content-center">
        <p>
            <%= link_to "Edit", edit_admin_shop_path(shop), class: "btn btn-success" %> 
        </p>
    
        <p>
          <%= link_to "Delete", admin_shop_path(shop), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-success" %>
        </p>
      
        </div>
        </div>
      </div>







<% end %>
<p>
<%= link_to "Create New shop", new_admin_shop_path, class: "btn btn-success" %>
</p>
<p>
<%= link_to "Back To Homepage", root_path ,class: "btn btn-success" %>
</p> 