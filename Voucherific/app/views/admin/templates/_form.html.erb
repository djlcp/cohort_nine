
<div class="section">
<%= simple_form_for [:admin, @template] do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :value, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :description, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' }  %>
    </div>
  </div>
  <%= f.button :submit, 'Save template',class: "btn btn-primary" %>
  <%= link_to "Back to templates list", admin_templates_path, class: "btn btn-primary" %>
<% end %>
</div>