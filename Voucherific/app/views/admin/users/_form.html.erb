<div class="section">
<%= simple_form_for [:admin, @user] do |f| %>
<div class="container">
<div class="card-deck mb-3 text-center">
  <div class="card mb-4 shadow-sm">
    <div class="card-header">
      <h4 class="my-0 font-weight-normal"> Edit User Privileges</h4>
    </div>
    <div class="card-body">
     <div class="field">
      <div class="control">
        <%= f.label :is_admin, 'Grant admin Priveleges'%>
        <%= f.check_box :is_admin %>
     </div>
    </div><br>
    <div class="field">
      <div class="control">
        <%= f.label :is_vendor, 'Grant vendor Priveleges'%>
        <%= f.check_box :is_vendor %>           
      </div>
      </br>
      <div id="Shop_details" style="display:none;">
        <%= f.label :shop_id, "Assign a partner shop" %>
         <%= f.collection_select :shop_id, Shop.order(:name),:id,:name, include_blank: false  %>
      </div>
      </br>
<script type="text/javascript">
  var checkbox = document.getElementById('user_is_vendor');
  var details_div = document.getElementById('Shop_details');
  checkbox.onchange = function() {
     if(this.checked) {
       details_div.style['display'] = 'block';
     } else {
       details_div.style['display'] = 'none';
     }
  };
</script>
    </div>

     <div>
      <%= f.button :submit, 'Save user',class: "btn btn-success" %>
      <%= link_to "Back to user list", admin_users_path, class: "btn btn-success" %>
      <% end %>
    </div>




